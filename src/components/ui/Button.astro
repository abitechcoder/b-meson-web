---
import { Icon } from "astro-icon/components";
import { twMerge } from "tailwind-merge";

const {
  variant = "primary",
  text = Astro.slots.render("default"),
  icon = "",
  ...rest
} = Astro.props;

const variants = {
  primary: "bg-primary hover:bg-orange-500 hover:cursor-pointer text-white",
  secondary:
    "bg-orange-500 text-white hover:bg-white hover:cursor-pointer hover:text-orange-500 hover:font-bold",
  border:
    "border border-orange-500 hover:border-primary hover:cursor-pointer text-orange-500 hover:text-white",
};
---

<a
  class={twMerge(
    variants[variant] || "",
    "px-8 py-3 font-semibold text-base rounded-full font-inter grid place-items-center"
  )}
  {...rest}
>
  <Fragment set:html={text} />
</a>
