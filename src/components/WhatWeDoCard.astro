---
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
  description: string;
  // link: string;
}

const { title, description} = Astro.props;
---

<div
  class="shadow-lg border border-gray-300 rounded-lg py-8 px-4 flex flex-col gap-4 items-center"
>
  <div class="bg-orange-500 rounded-lg p-4">
    <Icon name={"knob"} />
  </div>
  <h5 class="text-primary font-bold font-poppins text-xl text-center">
    {title}
  </h5>
  <p class="text-gray-500 text-center">
    {description}
  </p>
  <!-- <a href={link} class="text-orange-500 hover:text-primary">Learn more...</a> -->
</div>
